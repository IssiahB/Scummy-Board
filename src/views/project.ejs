<%- include('./partials/header.ejs') %>

    <h1 class="text-center mt-4 mb-5"> Projects </h1>

        <section class="d-flex justify-content-center container">
            <!-- Render Projects -->
            <div class="border rounded p-4">
                <% if (projects.length > 0) { %> 
                    <div class="card my-3 mh-40 overflow-auto" style="width: 20rem;">
                        <div class="card-header">
                            Current Projects
                        </div>
                        <ul class="list-group list-group-flush">
                            <% for (let project of projects) { %>
                                <li class="list-group-item text-center">
                                    <a href="./<%= user.username %>/<%= project.id %>">
                                        <%= project.title %>
                                    </a>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                <% } else { %>
                    <div class="text-center">
                            <h3>ðŸ¤¯ Start A New Project ðŸ¤¯</h3>
                    </div>
                <% } %> 
                <div class="d-flex justify-content-between mt-5">
                    <button class="btn btn-secondary" onclick="window.location.href='../access/logout'">
                        Logout
                    </button>
                    <!-- Create Project Modal Trigger -->
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createProjectModal">
                        New Project 
                    </button>
                </div>
            </div>
        </section>

        <!-- Create Project Modal -->
        <div class="modal fade" id="createProjectModal" tabindex="-1" role="dialog" aria-labelledby="createProjectModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createProjectModalLabel">Create Project</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="../scum/createproject" method="POST">
                        <div class="modal-body">
                            <div class="form-group">
                                <div class="container">
                                    <div class="row">
                                        <label for="project-title">Project Title</label>
                                    </div>
                                    <div class="row">
                                        <input type="text" id="project-title" name="title" placeholder="Enter Title" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
